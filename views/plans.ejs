<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <form action="/plans" method="post">
      <h1>Create Your Plan</h1>
      <input
        type="number"
        name="planamt"
        id=""
        placeholder="enter the amount"
      />
      <div>
        <label for="period">Weekly</label>
        <input type="radio" name="period" value="weekly" />
      </div>
      <div>
        <label for="period">Monthly</label>
        <input type="radio" name="period" value="monthly" />
      </div>
      <div>
        <label for="period">Yearly</label>
        <input type="radio" name="period" value="yearly" />
      </div>
      <label for="interval">Interval</label>
      <input type="number" name="interval" placeholder="interval" />

      <label for="name">Name</label>
      <input type="text" name="name" />

      <label for="desc">Description</label>
      <input type="text" name="desc" />

      <button type="submit">Create Plan</button>
    </form>
  </body>
</html>
