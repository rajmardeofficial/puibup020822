<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
      .invite-box {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 50%;
      }
    </style>
  </head>

  <body>
    <% result.forEach((cardData)=>{ %>

    <div class="invite-box">
      <h2 class="card_title"><%= cardData.user.username %></h2>

      <div>
        <button><a href="/checkSubStat">Accept</a></button>
        <button><a href="/deleteInvite">Decline</a></button>
      </div>
    </div>

    <% }) %>
  </body>
</html>
